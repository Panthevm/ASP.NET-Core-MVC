@model ChuvsuEvents.ViewModels.OrganizationViewModel
@{
    ViewBag.Title = "Создание организации";
}
    <form asp-action="SetOrganization" asp-controller="Account">

        <div class="form-group">
            <label asp-for="Name" class="control-label">Название</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Theme" class="control-label">Тематика</label>
            <input type="text" asp-for="Theme" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label">Описание</label>
            <textarea asp-for="Description" type="text" id="form75" class="form-control" rows="3"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="UrlImage" class="control-label">Url изображения</label>
            <input asp-for="UrlImage" type="text" id="form75" class="form-control" rows="3">
        </div>

        <div class="form-group">
            <input type="submit" value="Добавить" class="btn btn-dark my-4 btn-block" />
        </div>
    </form>