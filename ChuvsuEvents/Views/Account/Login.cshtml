@model ChuvsuEvents.ViewModels.LoginViewModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
                <h2 class="text-center">Авторизация</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Email" type="email" id="defaultLoginFormEmail" class="form-control mb-4" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>

                <input asp-for="Password" type="password" id="defaultLoginFormPassword" class="form-control mb-4" placeholder="Пароль">
                <span asp-validation-for="Password" class="text-danger"></span>

                <div class="d-flex justify-content-between">
                    <div>
                        <div class="custom-control custom-checkbox">
                            <input asp-for="RememberMe" type="checkbox" class="custom-control-input" id="defaultLoginFormRemember">
                            <label asp-for="RememberMe" class="custom-control-label" for="defaultLoginFormRemember">Запомнить?</label>
                        </div>
                    </div>
                    <div>
                        <a asp-action="ForgotPassword">Забыли пароль?</a>
                    </div>
                </div>
                <button class="btn btn-dark btn-block my-4" type="submit">Войти</button>
                <div class="text-center">
                    <p>
                        Нет аккаунта?
                        <a asp-action="Register">Зарегистрируйтесь</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>