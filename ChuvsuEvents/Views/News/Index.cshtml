@model ChuvsuEvents.ViewModels.NewsModelShow
@{
    ViewData["Title"] = ViewBag.Organization;
}
    <div class="card-deck">
        @foreach (var events in Model.EventMode) {
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@events.Title</h5>
                    <p class="card-text">@events.Description</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted float-right">@events.Date.ToString("d")</small>
                    <a asp-controller="News" asp-action="EventDetailed" asp-route-id="@events.Id" class="btn btn-dark">Подробнее</a>
                </div>
            </div>
        }

    </div>
<div class="dropdown-divider"></div>

@foreach (var news in Model.NewsMode.Reverse()) {
    <div class="jumbotron text-center hoverable p-0  grey lighten-4">
        <div class="row">

            <div class="col-md-4 offset-md-1 mx-3 my-3">

                <div class="view overlay">
                    <img src="@news.UrlImage" class="img-fluid rounded" alt="Sample image for first version of blog listing">
                    <a>
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>

            </div>
            <div class="col-md-7 text-md-left ml-3 mt-3">

                <h6 class="h6 pb-1 green-text"> @news.PubDate.ToString("d")</h6>

                <h4 class="h4 mb-4">@news.Title</h4>

                <p class="font-weight-normal text-left" >
                    @if (news.Description.Length <= 150) {
                        @news.Description
                    }
                    else {
                        @news.Description.Remove(150)<text>...</text>
                    }

                </p>

                <a asp-controller="News" asp-action="Detailed" asp-route-Id="@news.Id" class="btn btn-success m-0 mb-3">Подробнее</a>

            </div>
        </div>

    </div>

}
