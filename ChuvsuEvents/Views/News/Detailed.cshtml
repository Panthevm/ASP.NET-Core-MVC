@model ChuvsuEvents.ViewModels.NewsViewModel
@{
    ViewData["Title"] = "123";
}
<div class="jumbotron p-0">

    <!-- Card image -->
    <div class="view overlay rounded-top">
        <img src="@Model.UrlImage" class="img-fluid" alt="Sample image">
        <a href="#">
            <div class="mask rgba-white-slight"></div>
        </a>
    </div>

    <!-- Card content -->
    <div class="card-body text-center mb-3">

        <!-- Title -->
        <h3 class="card-title h3 my-4"><strong>@Model.Title</strong></h3>
        <!-- Text -->
        <p class="text-left">@Model.Description</p>


    </div>

</div>