@model ChuvsuEvents.ViewModels.EventDetailedModel
@{
    ViewData["Title"] = "123";
}
<div class="card card-cascade wider reverse">

    <!-- Card image -->
    <div class="view view-cascade overlay">
        <img class="card-img-top" src="@Model.EventMod.UrlImage" alt="Card image cap">
        <a href="#!">
            <div class="mask rgba-white-slight"></div>
        </a>
    </div>

    <!-- Card content -->
    <div class="card-body card-body-cascade text-center">

        <!-- Title -->
        <h4 class="card-title"><strong>@Model.EventMod.Title</strong></h4>
        <!-- Subtitle -->

        <form method="post">
            <a asp-controller="News" asp-action="Subscribe" asp-route-id="@Model.EventMod.Id" class="compItem btn btn-dark px-2 py-1 m-0 mybutton">
                Подать заявку
            </a>
        </form>

        <!-- Text -->
        <p class="text-lg-left">@Model.EventMod.Description</p>
    </div>

</div>
<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>

@section scripts {
    <script type="text/javascript">
        $(function () {
            $.ajaxSetup({ cache: false });
            $(".compItem").click(function (e) {

                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        })
    </script>
}